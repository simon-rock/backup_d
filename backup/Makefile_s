#ROOT := .
include ../Makefile_s

LINK	= g++
#CC	= g++ -g -c
AR	= ar -cr
RM	= rm -rf

# Target
TARGETS	= $(TARGETS1)
TARGETS1= libbackup.a

# OBJECT
OBJS	= $(OBJ_T1)
OBJ_T1	= backup.o backup_worker.o disk_container.o file_frame.o backup_master.o backup_task.o config.o msg_queue.o thread_pool.o sys_thread.o task_t.o db_exec.o

# DIR
#LIBDIR	= ../lib/

# CFLAGS
INCS	= -I ../include/
LIBS	= 
OPTIONS	= -ftemplate-depth-100 -O2 -finline-functions -Wno-inline -Wall 
CFLAGS	= $(INCS) $(LIBS) $(OPTIONS)

# libs depend
LIBDIRS	= 

all: $(TARGETS)

$(TARGETS1): libs $(OBJ_T1) 
	$(AR)  $(LIBDIR)$(TARGETS1)  $(OBJ_T1)

libs:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) -f Makefile_s --no-print-directory;)
.cpp.o	:
	$(CC)  $(INCS) $< 

clean:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) -f Makefile_s clean --no-print-directory;)
	@$(foreach T, $(TARGETS), \
            $(RM) $(LIBDIR)$(T);)
	-$(RM) $(OBJS) *.o *core

.PHONY: all clean dependents


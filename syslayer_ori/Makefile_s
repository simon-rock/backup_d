#ROOT := .
include ../Makefile_s

LINK	= g++ -o
#CC	= g++ -c 
AR	= ar -cr
RM	= rm -rf

# Target
TARGETS	= $(TARGETS1)
TARGETS1= libsyslayer.a

# OBJECT
OBJS	= $(OBJ_T1)
OBJ_T1	= sysinfod.o

# DIR
#LIBDIR	= ../lib/

# CFLAGS
INCS	= -I ../include/
LIBS	= -L ../lib  -lsyslayer
OPTIONS	= -ftemplate-depth-100 -O2 -finline-functions -Wno-inline -Wall 
CFLAGS	= $(INCS) $(LIBS) $(OPTIONS)

# libs depend
LIBDIRS	=

all: $(TARGETS)

$(TARGETS1): libs $(OBJ_T1)
	$(AR)  $(LIBDIR)$(TARGETS1)  $(OBJ_T1)
libs:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) -f Makefile_s --no-print-directory;)
.cpp.o	:
	$(CC)  $(INCS) $< 

clean:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) -f Makefile_s clean --no-print-directory;)
	@$(foreach T, $(TARGETS), \
            $(RM)  $(LIBDIR)$(T);)
	-$(RM) $(OBJS) *.o *core


.PHONY: all clean dependents


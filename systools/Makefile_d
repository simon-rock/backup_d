ROOT := .

LINK	= g++
CC	= g++ -c -g -DDEBUG
AR	= ar -cr
RM	= rm -rf

# Target
TARGETS	= $(TARGETS1)
TARGETS1= libsystools.a

# OBJECT
OBJS	= $(OBJ_T1)
OBJ_T1	= systools.o arg_parser.o

# DIR
BINDIR	= ../lib/

# CFLAGS
INCS	= -I ../include/
LIBS	= 
OPTIONS	= -ftemplate-depth-100 -O2 -finline-functions -Wno-inline -Wall 
CFLAGS	= $(INCS) $(LIBS) $(OPTIONS)

# libs depend
LIBDIRS	=

all: $(TARGETS)

$(TARGETS1): libs $(OBJ_T1)
	$(AR)  $(BINDIR)$(TARGETS1)  $(OBJ_T1)

libs:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) --no-print-directory;)
.cpp.o	:
	$(CC)  $(INCS) $< 

clean:
	@$(foreach BIND, $(LIBDIRS), \
            $(MAKE) -C $(BIND) clean --no-print-directory;)
	@$(foreach T, $(TARGETS), \
            $(RM)  $(BINDIR)$(T);)
	-$(RM) $(OBJS) *.o *core


.PHONY: all clean dependents

